{
  "name": "@craftsilicon/rn-design-system",
  "version": "1.0.0",
  "description": "Reusable React Native design system for mobile apps",
  "keywords": [
    "react-native",
    "craft-design-system",
    "craft-silicon-components",
    "craft-silicon-ui",
    "typescript"
  ],
  "author": "craftsilicon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/somesh2406/craft-design-system"
  },
  "homepage": "https://github.com/somesh2406/craft-design-system#readme",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "scripts": {
    "start": "tsc --watch",
    "build": "rm -rf dist && tsc",
